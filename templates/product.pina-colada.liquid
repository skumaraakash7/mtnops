
<div class="main-page-wrapper">


  {% comment %}<img class="floating-fruit fruit-one" src="https://cdn.shopify.com/s/files/1/2786/4584/files/pineapple-slice.png?v=1590688818">
  <img class="floating-fruit fruit-two" src="https://cdn.shopify.com/s/files/1/2786/4584/files/pineapple-full.png?v=1590688819">
  <img class="floating-fruit fruit-three" src="https://cdn.shopify.com/s/files/1/2786/4584/files/coconut.png?v=1590688818">{% endcomment %}

  <section class="product-header-section">
    <div class="container-fluid">
       <div class="row">
          <div class="site-content col-sm-12" role="main">
            {% comment %}{%- include 'product_page_area' -%}{% endcomment %}
            <header>
              <img class="product-intro-image" src="https://cdn.shopify.com/s/files/1/2786/4584/files/pina-colada.svg?v=1590688818">
              <p><b>PINA COLADA IS BACK IN STOCK!</b> We are bringing the taste of the islands to your backyard. Add some frozen pineapple to your favorite mixer and blend to perfection with this tropical coconut flavor. It's as close to an island staycation you can get, so better scoop it up while they are in stock!</p>
              {% comment %}<img class="product-lineup-image" src="">{% endcomment %}
            </header>
          </div> <!-- .site-content -->
      </div> <!-- end row -->
    </div> <!-- end container -->
  </section>

  <section class="lifestyle-section">
    <img src="https://cdn.shopify.com/s/files/1/2786/4584/files/pina-colada-LR-lifestyle-2.jpg?v=1626273928">
  </section>
  <section class="products-wrap">
    <ul class="product-variations-wrap">
      {% for v in product.variants %}
        
          <li>
            <div class="featured-image-wrap">
              <img class="product-featured" src="{{ v.image.src | img_url: '1000x1000' }}">
            </div>
            <div class="product-meta-wrap">
              {% include 'mtnops_product_callout_svgs' %}
              <div>
                <span class="product-price">{{v.price | money}}</span>
                {% if v.available %}
                  <a class="ajax_add_to_cart add_to_cart_button add-to-cart-btn" href="#" data-pid="{{ v.id }}">Add to Cart</a>
                {% else %}
                  <p>Bummer. This is currently out of stock. Check back soon!</p>
                {% endif %}
              </div>
            </div>
          </li>
        
      {% endfor %}
      </ul>
  </section>

  <section class="lifestyle-section">
    <img src="https://cdn.shopify.com/s/files/1/2786/4584/files/pina-colada-LR-lifestyle-1.jpg?v=1626273928">
  </section>
  
</div><!-- .main-page-wrapper -->


{% comment %}<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.2.4/gsap.min.js"></script>
<script type="text/javascript">
  //gsap.fromTo('.floating-fruit', 4, {scale: 1, rotation: -5}, {scale: 1.12, rotation: 5, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
  gsap.fromTo('.product-intro-image', 2, {scale: 1}, {scale: 1.04, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
  gsap.fromTo('.product-featured', 2.5, {scale: 1}, {scale: 1.02, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
</script>{% endcomment %}
