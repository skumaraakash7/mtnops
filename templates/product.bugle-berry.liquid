{% comment %}{% if customer.email == 'jake.shaw@me.com' %}
{% else %}
  <p>Bugle Berry coming soon!</p>
{% endif %}{% endcomment %}

<div class="mtnops-slim-page-title"><h1>BUGLE BERRY - THE OFFICIAL TASTE OF SEPTEMBER</h1></div>
<div class="main-page-wrapper">
  <!-- MAIN CONTENT AREA -->

  {% comment %}<img class="floating-fruit fruit-one" src="https://cdn.shopify.com/s/files/1/2786/4584/files/kiwi-fruit-cut.png?v=1593454231">
  <img class="floating-fruit fruit-two" src="https://cdn.shopify.com/s/files/1/2786/4584/files/strawberry-fruit-cut.png?v=1593454231">
  <img class="floating-fruit fruit-three" src="https://cdn.shopify.com/s/files/1/2786/4584/files/kiwi-fruit.png?v=1593454231">
  <img class="floating-fruit fruit-four" src="https://cdn.shopify.com/s/files/1/2786/4584/files/strawberry-fruit.png?v=1593454232">{% endcomment %}

  {% comment %}<header class="bugle-berry-header" style="background-image: url('https://cdn.shopify.com/s/files/1/2786/4584/files/BUGLE_BERRY-LIFESTYLE-08.25.2020-10.jpg?v=1598553369');">
    <img src="https://cdn.shopify.com/s/files/1/2786/4584/files/bugle-berry-now-available.svg?v=1598561334">
  </header>{% endcomment %}

  <div class="container-fluid">
     <div class="row">
        <div class="site-content col-sm-12" role="main">
          {% comment %}{%- include 'product_page_area' -%}{% endcomment %}
          {% comment %}<h1>{{ product.title }}</h1>{% endcomment %}

          <div class="product-heading">
            <img src="https://cdn.shopify.com/s/files/1/2786/4584/files/official-taste-of-september.svg?v=1598564678">
            <p>{{ product.metafields.meta.description_excerpt }}</p>
          </div>

        </div> <!-- .site-content -->
    </div> <!-- end row -->
  </div> <!-- end container -->
  <!-- end container -->

  <div class="product-variations-wrap">
  {% for v in product.variants %}
    
      <div class="outer-product-section bugle-berry-{{ v.title | handleize }}">
        <div class="product-section">
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-12">
                <div class="product-inner-wrap">
                  <div class="featured-image-wrap">
                    <img class="product-featured" src="{{ v.image.src | img_url: 'master' }}">
                  </div>
                  <div class="product-meta-wrap">
                    {% include 'mtnops_product_callout_svgs' %}
                    <div>
                      <span class="product-price">{{v.price | money}}</span>
                      {% if v.available %}
                      <a class="ajax_add_to_cart add_to_cart_button add-to-cart-cta" href="#" data-pid="{{ v.id }}">Add to Cart</a>
                      {% else %}
                      <p class="stock-message">OUT OF STOCK</p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% if v.metafields.meta.lifestyle != blank %}
          <div class="lifestyle-section">
            <img src="{{ v.metafields.meta.lifestyle }}">
          </div>
        {% endif %}
      </div>
    
  {% endfor %}
  </div>

  <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>

</div><!-- .main-page-wrapper -->






{% comment %}<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.2.4/gsap.min.js"></script>
<script type="text/javascript">
  gsap.fromTo('.floating-fruit', 4, {scale: 1, rotation: -5}, {scale: 1.12, rotation: 5, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
  gsap.fromTo('.product-intro-image', 2, {scale: 1}, {scale: 1.04, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
  gsap.fromTo('.product-featured', 2.5, {scale: 1}, {scale: 1.02, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
</script>
{% endcomment %}