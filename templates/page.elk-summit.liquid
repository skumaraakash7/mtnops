<script type="text/javascript">
	var packageId = {{package.variants[0].id}};


	$('#add-registration').iziModal({
		padding: 30,
		overlayColor: 'rgba(0, 0, 0, 0.9)',
		width: 500,
		closeButton: false,
		autoOpen: false
	});

	$(document).on('click', '.ready-to-register', function (event) {
    event.preventDefault();
    $('#add-registration').iziModal('open');
	});

	$('#shirt-size').change(function(){
		console.log($(this).val()); 
	});

	if($('#waist-size').is(":focus")) {
		console.log('is focused');
	}

	$(document).ready(function(){
    $("#lifestyle-gallery").owlCarousel({
      loop: true,
      nav: false,
      dots: false,
      stagePadding: 5,
      margin: 5,
      autoplay: true,
      autoplayTimeout: 4000,
      responsive: {
        0: {
          items: 2
        },
        700: {
          items: 3
        }
      }
    });
  });

	$(document).ready(function(){
    $("#brands-gallery").owlCarousel({
      loop: true,
      nav: false,
      dots: false,
      stagePadding: 5,
      margin: 5,
      autoplay: true,
      autoplayTimeout: 4000,
      responsive: {
        0: {
          items: 1
        },
        600: {
          items: 2
        },
        900: {
          items: 3
        }
      }
    });
  });

  function addfreeProductToCart(product_id, quantity, shirt, waist) {
    data = {
      "quantity": quantity,
      "id": product_id,
      attributes: {
        'Attendee Shirt Size': shirt,
        'Attendee Waist Size': waist
      },
      properties: {
        'Elk Summit': 'June 24th-26th!'
      }
    }
    jQuery.ajax({
      type: 'POST',
      url: '/cart/add.js',
      data: data,
      dataType: 'json',
      success: function() { 
        console.log('adding to cart was a success!');
     		window.location.href = "/checkout";
        
      },
      error: function (request, status, error) {
        console.log(request.responseText);
        var code = request.responseJSON.status;
        //if (code == 422 ) {
          //$('.message').text();
        //}
        console.log("<p>" + request.responseJSON.description + "</p>");
        alert('error on adding product to cart.');
      }
    });
  }

  // 

  $('.elk-summit-sign-up').on('click', function(e) {
  	e.preventDefault();
  	let shirt = $('#shirt-size').val(),
  	waist = $('#waist-size').val();
  	console.log('shirt '+ shirt, 'waist ' + waist);
  	if(waist && shirt !== "") {
  		addfreeProductToCart(packageId, 1, shirt, waist);
  	} else {
  		if(shirt === "") {
  			alert('Please select your shirt size');
  		} else if (!waist) {
  			alert('Please add your waist size');
  		}
  	}
    
  });
	

</script>




