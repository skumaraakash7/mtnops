
<div class="main-page-wrapper">
    <!-- MAIN CONTENT AREA -->

    <img class="floating-fruit fruit-one" src="https://cdn.shopify.com/s/files/1/2786/4584/files/STM-Electrolyte-Freshlemonlime-1000.png?v=1586400615">
    
    <img class="floating-fruit fruit-two" src="https://cdn.shopify.com/s/files/1/2786/4584/files/STM-Electrolyte-FruityPinkBurst-1000.png?v=1586400615">
    
    <img class="floating-fruit fruit-three" src="https://cdn.shopify.com/s/files/1/2786/4584/files/STM-Electrolyte-BlueRasp-1000.png?v=1586400616">
    
    <img class="floating-fruit fruit-four" src="https://cdn.shopify.com/s/files/1/2786/4584/files/STM-Electrolyte-Freshlemonlime-1000.png?v=1586400615">

      <div class="container-fluid">
         <div class="row">
            <div class="site-content col-sm-12" role="main">
              <div class="product-launch-wrap">
                {% comment %}{%- include 'product_page_area' -%}{% endcomment %}
                <header>
                  <img class="product-intro-image" src="https://cdn.shopify.com/s/files/1/2786/4584/files/ElectrolyteLandingPage-HeaderText.png?v=1586388352">
                  <img src="https://cdn.shopify.com/s/files/1/2786/4584/files/ElectrolyteCallouts.png?v=1586388345">
                  <img class="product-lineup-image" src="https://cdn.shopify.com/s/files/1/2786/4584/files/STM-Electrolyte-Splash-Web.png?v=1586388616">
                  {% comment %}<img class="product-lineup-image" src="https://cdn.shopify.com/s/files/1/2786/4584/files/STM-Electrolyte-Web.png?v=1586388617">{% endcomment %}
                  
                </header>

                {% comment %}<h1>{{ product.title }}</h1>{% endcomment %}

                <div class="product-headline">
                  <img src="https://cdn.shopify.com/s/files/1/2786/4584/files/TheMostConvenenientElectrolyteEver.png?v=1586399916">
                  <p>{{ product.metafields.meta.description_excerpt }}</p>

                </div>

                  {% if product.variants.size > 1 %}

                    <ul class="product-variations-wrap">
                    {% for v in product.variants %}
                      {% if v.available %}
                        <li>
                          <div class="featured-image-wrap">
                            <img class="product-featured" src="{{ v.image.src | img_url: '1000x1000' }}">
                          </div>
                          <div class="product-meta-wrap">
                            {% if v.id == 31403492278314 %}
                              <img class="product-benefits" src="https://cdn.shopify.com/s/files/1/2786/4584/files/yeti-callout.png?v=1585763250">
                            {% elsif v.id == 31403492311082 %}
                              <img class="product-benefits" src="https://cdn.shopify.com/s/files/1/2786/4584/files/ignite-callout.png?v=1585763250">
                            {% elsif v.id == 31403492343850 %}
                              <img class="product-benefits" src="https://cdn.shopify.com/s/files/1/2786/4584/files/enduro-callout.png?v=1585763249">
                            {% endif %}
                            <div>
                              <span class="product-price">{{v.price | money}}</span>
                              <a class="ajax_add_to_cart add_to_cart_button add-to-cart-watermelon" href="#" data-pid="{{ v.id }}">Add to Cart</a>
                            </div>
                          </div>
                        </li>
                      {% endif %}
                    {% endfor %}
                    </ul>

                  {% else %}

                    {% comment %}<div class="featured-image-wrap">
                      <img class="product-featured" src="{{ product.featured_image | img_url: '600x600' }}">
                    </div>{% endcomment %}
                    <div class="product-meta-wrap">
                      <div>
                        <span class="product-price">{{product.price | money}}</span>
                        {% if product.available %}
                          <a class="ajax_add_to_cart add_to_cart_button add-product-to-cart" href="#" data-pid="{{ product.variants[0].id }}">Add to Cart</a>
                        {% else %}

                          <div class="out-of-stock-message text--light">
                            <p>Bummer! {{product.title}} is currently out of stock.</p><a class="klaviyo-bis-trigger klaviyo-stock-btn" href="#">Notify Me When Available</a>
                          </div>
                        {% endif %}

                        {% comment %}{% include 'mtnops_supp_facts' %}{% endcomment %}

                        <div>
                          {% unless product.metafields.global.supfacts == blank %}
                          {% assign images = product.metafields.global.supfacts | split: ','  %}
                          
                            <div id="supp-facts" class="iziModal supp-modal custom-modal" data-izimodal-transitionin="fadeInDown">
                              <a data-izimodal-close="" class="icon-close"><i class="fa fa-times" aria-hidden="true"></i></a>
                              <div class="supp-facts-gallery">
                                {% for url in images %}
                                    {% assign clean url = url | strip %}
                                    <div class="item">
                                  <img src="{{url}}" />
                                    </div>
                                {% endfor %}
                              </div>
                              
                            </div>
                          <a class="btn-link" data-izimodal-open="#supp-facts" data-izimodal-transitionin="fadeInDown">SUPP FACTS</a>
                          
                        {% endunless %}

                        {% unless product.metafields.global.science == blank %}
                          <a class="btn-link" href="{{ product.metafields.global.science }}" target="_blank" >SCIENCE RULES</a>
                        {% endunless %}
                        </div>

                      </div>
                    </div>

                  {% endif %}

                  

                {% comment %}{% else %}
                  <div class="featured-image-wrap">
                    <img class="product-featured" src="{{ v.image.src | img_url: '1000x1000' }}">
                  </div>
                  <div class="product-meta-wrap">
                    <span class="product-price">{{product.price | money}}</span>
                    <a class="ajax_add_to_cart add_to_cart_button add-to-cart-watermelon" href="#" data-pid="{{ product.variants[0] }}">Add to Cart</a>

                  </div>
                {% endif %}{% endcomment %}
              </div>

            </div> <!-- .site-content -->
        </div> <!-- end row -->
      </div> <!-- end container -->
      <!-- end container -->
</div><!-- .main-page-wrapper -->


<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.2.4/gsap.min.js"></script>
<script type="text/javascript">
  gsap.fromTo('.floating-fruit', 4, {scale: 1, rotation: -5}, {scale: 1.12, rotation: 5, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
  gsap.fromTo('.product-intro-image', 2, {scale: 1}, {scale: 1.04, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
  gsap.fromTo('.product-featured', 2.5, {scale: 1}, {scale: 1.02, transformOrigin:"center center", repeat: -1, yoyo: true, ease: Power1.easeInOut});
</script>
