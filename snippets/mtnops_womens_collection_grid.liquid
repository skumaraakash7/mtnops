{% include 'mtnops_tag_checker' %}

{%- assign settings_pr_img_size = settings.use_eq_height -%}
{%- assign products_columns = settings.products_columns -%}
{%- assign shop_different_grid = settings.shop_different_grid -%}
{%- assign loop_countdown = settings.loop_sale_countdown -%}
{%- assign general_layout = false -%}
{%- if settings.general_layout == 'wide' or settings.general_layout == 'contetn_full' -%}
   {%- assign general_layout = true -%}
{%- endif -%}
{%- if current_tags != blank -%}
      {%- assign has_current_tags = true -%}
      {%- assign list_current_tag = '' -%}
      {%- for current_tag in current_tags -%}
          {%- assign current_tag_downcase = current_tag | downcase -%}
          {%- assign list_current_tag = list_current_tag | append:current_tag_downcase | append:',' -%}
       {%- endfor -%}
       {%- assign current_tags = list_current_tag | split:',' -%}
   {%- endif -%}
{%- if settings.shop_sidebar == 'left' -%}
   {%- case settings.shop_size_sidebar -%}
     {% when '1' %}
       {%- assign class_gl = 'col-sm-10 col-sm-push-2' -%}
       {%- assign class_sidebar = 'col-sm-2 col-sm-pull-10' -%}
     {% when '2' %}
       {%- assign class_gl = 'col-sm-9 col-sm-push-3' -%}
       {%- assign class_sidebar = 'col-sm-3 col-sm-pull-9' -%}
     {% when '3' %}
       {%- assign class_gl = 'col-sm-8 col-sm-push-4' -%}
       {%- assign class_sidebar = 'col-sm-4 col-sm-pull-8' -%}
   {%- endcase -%}
{%- elsif settings.shop_sidebar == 'right' -%}
   {%- case settings.shop_size_sidebar -%}
     {% when '1' %}
       {%- assign class_gl = 'col-sm-10' -%}
       {%- assign class_sidebar = 'col-sm-2' -%}
     {% when '2' %}
       {%- assign class_gl = 'col-sm-9' -%}
       {%- assign class_sidebar = 'col-sm-3' -%}
     {% when '3' %}
       {%- assign class_gl = 'col-sm-8' -%}
       {%- assign class_sidebar = 'col-sm-4' -%}
   {%- endcase -%}
{%- else -%}
   {%- assign class_gl = 'col-sm-12' -%}
{%- endif -%}
{%- if shop_different_grid == false -%}
{%- case products_columns -%}
    {%- when '2' -%}
      {%- assign gl_colum_width = 'col-xs-6 col-sm-4 col-md-6' -%}
      {%- if general_layout -%}{%- assign image_size = '774x' -%}{%- else-%}{%- assign image_size = '555x' -%}{%-endif-%}
    {%- when '3' -%}
      {%- assign gl_colum_width = 'col-xs-6 col-sm-4 col-md-4' -%}
      {%- if general_layout -%}{%- assign image_size = '505x' -%}{%- else-%}{%- assign image_size = '370x' -%}{%-endif-%} 
    {%- when '4' -%}
      {%- assign gl_colum_width = 'col-xs-6 col-sm-4 col-md-3' -%}
      {%- if general_layout -%}{%- assign image_size = '370x' -%}{%- else-%}{%- assign image_size = '263x' -%}{%-endif-%}
   {%- when '6' -%}
      {%- assign gl_colum_width = 'col-xs-6 col-sm-4 col-md-2' -%}
      {%- if general_layout -%}{%- assign image_size = '237x' -%}{%- else-%}{%- assign image_size = '165x' -%}{%-endif-%}
{%- endcase -%}
{%- endif -%}
{%- case settings.products_hover -%}
    {%- when 'base' -%}
      {%- assign gl_include = 'section_loop_product_base' -%} 
    {%- when 'alt' -%}
      {%- assign gl_include = 'section_loop_product_alt' -%}
    {%- when 'button' -%}
      {%- assign gl_include = 'section_loop_product_button' -%}
   {%- when 'info' -%}
      {%- assign gl_include = 'section_loop_product_info' -%}
   {%- when 'link' -%}
      {%- assign gl_include = 'section_loop_product_link' -%}
   {%- when 'standard' -%}
      {%- assign gl_include = 'section_loop_product_standard' -%}
   {%- when 'excerpt' -%}
      {%- assign gl_include = 'section_loop_product_excerpt' -%}
   {%- when 'quick' -%}
      {%- assign gl_include = 'section_loop_product_quick' -%}
{%- endcase -%}
{%- case settings.collection_countdown_style -%}
    {%- when 'light' -%}
      {%- assign countdown_style = 'color-scheme-dark timer-size-small timer-style-standard' -%} 
    {%- when 'dark' -%}
      {%- assign countdown_style = 'color-scheme-light timer-size-small timer-style-standard' -%}
    {%- when 'transparent_1' -%}
      {%- assign countdown_style = 'color-scheme-light timer-size-small timer-style-transparent' -%}
   {%- when 'transparent_2' -%}
      {%- assign countdown_style = 'color-scheme-dark timer-size-small timer-style-transparent' -%}
{%- endcase -%}
{%- if settings.sale_countdown -%}
   {%- assign section_settings_countdown = true -%}
{%- else -%}
   {%- assign section_settings_countdown = false -%}
{%- endif -%}
{%- if settings.shop_image_size != blank -%}{%- assign crop_nt = settings.shop_image_size -%}{%- endif -%}
{%- if settings.use_wishlist -%}{%- include 'nitro-wishlist' -%}{%- endif -%}
{%- if current_tags != blank -%}
   {%- assign __color_current_tags = canonical_url | split: collection.handle -%}
   {%- assign color_current_tags = __color_current_tags[1] | split:'?page' | first | remove_first: "/" -%}
   {%- assign _no_current_tags = color_current_tags | split: "+" -%}
   {%- assign _color_current_tags = color_current_tags | split: "+" | reverse -%}
{%- endif -%}
{%- if template.suffix != blank -%}
   {%- assign template_suffix = template.suffix -%}
   {%- assign check_template_list = true -%} 
{%- else -%}
   {%- assign check_template_list = false -%} 
{%- endif -%}
{%- capture cat_link_nathan_xxx -%}{{ 'nathan_xyz' | link_to_remove_tag: '' }}{%- endcapture -%}
{%- assign cat_link_nathan_xx = cat_link_nathan_xxx | split:'href="' | last | split:'"' | first -%}
{%- assign sort_symboy = '?&'-%}
{%- if collection.current_vendor %}{%- assign sort_symboy = '&'-%}{%- endif -%}
<div class="main-page-wrapper">

  <header class="collection-hero header-hidden{% if collection.metafields.meta.image != blank %} has-collection-image{% endif %}"{%- if collection.metafields.meta.image != blank -%} style="background-image: url('{{ collection.metafields.meta.image }}');"{%- endif -%}>
    <div class="collection-hero-text">

      {%- if collection.metafields.meta.logo != blank -%}
        <img class="collection-logo" src="{{ collection.metafields.meta.logo }}">
        {%- if collection.metafields.meta.discountCode != blank -%}
          <div class="apply-code">Apply code <span class="discount-code">[{{collection.metafields.meta.discountCode}}]</span> at Checkout</div>
        {%- endif -%}        
      {%- else -%}

        <h1>{{ collection.title }}</h1>
        {%- if collection.metafields.meta.subtitle != blank -%}
          <span class="h1-subtitle">{{ collection.metafields.meta.subtitle }}</span>
        {%- endif -%}

      {%- endif -%}
      {%- if collection.metafields.meta.description != blank and collection.metafields.meta.image != blank -%}
        <p>{{ collection.metafields.meta.description }}</p>
      {%- endif -%}
    </div>
  </header>

   <div class="container">
      <div class="row">
         <div class="site-content {{class_gl}}" role="main">

          

            {%- if settings.use_promo_banner_collection -%}{%- section 'promo_banner_collection' -%}{%- endif -%}
            {%- if collection.description != blank and settings.show_des_collection -%}<div class="term-description promo-banner text-center" id="des_{{collection.id}}"><h2>{{collection.title}}</h2>{{collection.description}}</div>{%- endif -%}
            
            <div class="basel-products-loader"></div>
            {%- if collection.products.size == 0 -%}<p class="shopify-info">{{ 'collections.general.no_matches' | t }}</p>{%- endif -%}


            <div class="collection-lifestyle-section full-width">
              <img class="image-cover" src="https://cdn.shopify.com/s/files/1/2786/4584/files/pina-colada-lifestyle-rih-jar.jpg?v=1590690096">
              <img class="collection-section-svg" src="https://cdn.shopify.com/s/files/1/2786/4584/files/nutrition-for-her.svg?v=1603918971">
            </div>
            <div class="collection-section-wrap{% if settings_pr_img_size %} equal-nt{% endif %} {{settings.image_size}} {{settings.image_ratio}} position_{{settings.image_position}} products elements-grid row pagination-{{settings.use_pagination}} grid-columns-{{settings.products_columns}}{%- if settings.shop_masonry_grid %} grid-masonry{%- endif-%}{%- if settings.use_pagination == 'gl_more' or settings.use_pagination == 'infinit' %} basel-products-holder{%- endif -%}">
               {%- for product in collection.products -%}
                {% if product.type == 'Supplements' %}
                  {% unless product.tags contains 'Hidden' or product.type == 'HIDDEN' or product.type == 'INSERT' %}

                  {%- include 'section_loop_product_quick' -%}

                  
                  {% endunless %}
                {% endif %}
               {%- endfor -%}
            </div>

            <div class="collection-lifestyle-section full-width">
              <img class="image-cover" src="https://cdn.shopify.com/s/files/1/2786/4584/files/DawnHat-Lifestyle-Support-2000-1.jpg?v=1582909727">
              <img class="collection-section-svg" src="https://cdn.shopify.com/s/files/1/2786/4584/files/gear-for-her.svg?v=1603918971">
            </div>
            <div class="collection-section-wrap{% if settings_pr_img_size %} equal-nt{% endif %} {{settings.image_size}} {{settings.image_ratio}} position_{{settings.image_position}} products elements-grid row pagination-{{settings.use_pagination}} grid-columns-{{settings.products_columns}}{%- if settings.shop_masonry_grid %} grid-masonry{%- endif -%}{%- if settings.use_pagination == 'gl_more' or settings.use_pagination == 'infinit' %} basel-products-holder{%- endif -%}">
               {%- for product in collection.products -%}
                {% if product.type != 'Supplements' %}
                  {% unless product.tags contains 'Hidden' or product.type == 'HIDDEN' or product.type == 'INSERT' %}

                  {%- include 'section_loop_product_quick' -%}
                  

                  
                  {% endunless %}
                {% endif %}
               {%- endfor -%}
            </div>
              
         </div>

      </div>
   </div><!-- end container -->
</div><!-- MAIN CONTENT AREA -->

