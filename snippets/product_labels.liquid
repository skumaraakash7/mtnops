{%- assign check_label = false -%}
{%- if hot and settings.use_hot_label -%}
{%- assign check_label = true -%}
{%- elsif new_label != blank and settings.use_new_label -%}
{%- assign check_label = true -%}
{%- elsif on_sale and settings.use_sale_label -%}
{%- assign check_label = true -%}
{%- elsif sold_out and settings.use_sold_out_label -%}
{%- assign check_label = true -%}
{%- endif -%}
{%- if settings.label_sale_style == '2' and on_sale and settings.use_sale_label -%}{%- assign save = current_variant.compare_at_price | minus: current_variant.price | times: 100.0 | divided_by: current_variant.compare_at_price | ceil -%}{%- endif -%}
{%- if check_label -%}
<div class="product-labels labels-{{settings.label_settings}}">
	{%- if sold_out and settings.use_sold_out_label -%}<span class="out-of-stock product-label"><span>{{ 'products.product.sold_out' | t }}</span></span>{%- else -%}
	  {%- if on_sale and settings.use_sale_label -%}{%- if settings.label_sale_style == '1' -%}<span class="onsale product-label"><span>{{ 'products.product.on_sale' | t }}</span></span>{%- elsif save >=1 -%}<span class="onsale product-label precent_sale"><span>-{{save}}%</span></span>{%- endif -%}{%- endif -%}
	  {%- if hot and settings.use_hot_label -%}<span class="hot product-label"><span>{{ 'products.product.hot' | t }}</span></span>{%- endif -%}
	  {%- if new_label != blank and settings.use_new_label -%}<span class="new product-label"><span>{{ 'products.product.new' | t }}</span></span>{%- endif -%}
  {%- endif -%}
  
</div>
{%- endif -%}