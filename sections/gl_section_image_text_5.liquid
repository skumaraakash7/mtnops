                                      {%- endfor -%}
                                   {%- endfor -%}
                                 </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  {%- if forloop.first == false -%}
                     <div class="spb_column gl_column_container gl_col-sm-12 gl_col-md-7">
                        <div class="gl_column-inner gl_mb_4">
                           <div class="spb_wrapper">
