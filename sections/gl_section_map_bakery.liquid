         <div class="spb_wrapper">
            <div class="google-map-container google-map-container-with-content text-center">
               <div class="basel-google-map-wrapper">
                  <div class="basel-google-map with-content google-map-{{ section.id }}" style="height:{{section.settings.height}}px;"></div>
               </div>
            </div>
            {%- if section.settings.lat != blank and section.settings.lon != blank -%}
            {%- if admin_shopify -%}
               <script type="text/javascript">
                  function glMaplace() {
                     new Maplace({
                        locations: [
                            {
                              lat: {{ section.settings.lat }},
                              lon: {{ section.settings.lon }},
                              title: {{ section.settings.title | json }},
                              html: {{ section.settings.html | json }},
                       {%- if section.settings.icon != blank -%} icon: '{{section.settings.icon | img_url: 'master'}}',{%- endif -%}
                              animation: google.maps.Animation.DROP
                            }
                        ],
                        controls_on_map: false,
                        title: '',
                       map_div: '.google-map-{{section.id}}',
                       start: 1,
                       map_options: {
                        zoom: 15,
                        scrollwheel: false                   
                        }
                        {%- if section.settings.style_json != blank -%},
                       styles: {
                             'Custom style': {{ section.settings.style_json }}}
                        {%- endif %}
                     }).Load();
                  }
                  jQuery(document).ready(function() {
                     glMaplace();
               });
                  $(document)
                     .on('shopify:section:load', glMaplace)
                    .on('shopify:section:unload', glMaplace)
                    .on('shopify:section:select',glMaplace)
                    .on('shopify:section:deselect', glMaplace)
                    .on('shopify:block:select',glMaplace)
                    .on('shopify:block:deselect', glMaplace);
               </script>
            {%- else -%}
               <script type="text/javascript">
                  jQuery(document).ready(function() {
